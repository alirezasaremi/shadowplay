{
  "name": "shadowplay",
  "version": "0.1.0",
  "description": "A headless React audio player with LRC synchronization and shadowing support",
  "type": "module",
  "sideEffects": false,
  "files": [
    "dist"
  ],
  "main": "./dist/shadowplay.js",
  "module": "./dist/shadowplay.js",
